<?php /* use https://github.com/dansup/bulma-templates/blob/master/templates/hero.html */ ?><!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta content="IE=edge" http-equiv="X-UA-Compatible">
    <meta content="width=device-width, initial-scale=1" name="viewport">
    <title><%= title %> - <%= description %></title>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.1/css/bulma.min.css" rel="stylesheet"/>
</head>
<body>
<section class="hero is-info is-medium is-bold">
    <div class="hero-head">
        <nav class="navbar">
            <div class="container">
                <div class="navbar-brand">
                    <a class="navbar-item" href="/">
                        <%= title %>
                    </a>
                    <span class="navbar-burger burger" data-target="navbarMenu">
                                <span></span>
                                <span></span>
                                <span></span>
                            </span>
                </div>
                <div class="navbar-menu" id="navbarMenu">
                    <div class="navbar-end">
                        <div class="tabs is-right">
                            <ul>
                                <li class="is-active"><a>Home</a></li>
                            </ul>
                            <span class="navbar-item">
                                <a class="button is-white is-outlined"
                                   href="https://github.com/newsdict/syukei-san.xyz">
                                    <span class="icon">
                                    <i class="fa fa-github"></i>
                                    </span>
                                    <span title="Hello from the other side">View Source</span>
                                </a>
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </div>
    <div class="hero-body">
        <div class="container has-text-centered">
            <h1 class="title">
                <%= title %>
            </h1>
            <h2 class="subtitle">
                <%= description %>
            </h2>
        </div>
    </div>
</section>
<section id="main">
    <div id="container">
        <div class="card">
            <div class="card-content">
                <form action="/create" method="POST">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <div class="field">
                        <label class="label">タイトル</label>
                        <div class="control">
                            <input class="input <%= formHelper.getErrorClass('name') %>" type="text" name="name" placeholder="掃除当番の集計" value="<%= formHelper.getValueInSession('name') %>">
                            <% if (formHelper.isError('name')) { %>
                            <p class="help is-danger">3文字以上にする必要があります</p>
                            <% } %>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label">集計するデータ</label>
                        <div class="control">
                            <textarea class="textarea <%= formHelper.getErrorClass('data') %>" name="data" placeholder="1行ごとに入れてください"><%= formHelper.getValueInSession('data') %></textarea>
                            <% if (formHelper.isError('data')) { %>
                                <p class="help is-danger">2行以上にする必要があります</p>
                            <% } %>
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <label class="checkbox">
                                <input type="checkbox" name="is_agreement">
                                <a target="_blank" href="/term">利用規約</a>に同意します。
                            </label>
                            <% if (formHelper.isError('is_agreement')) { %>
                                <p class="help is-danger">利用規約にご同意していただく必要があります。※入力エラー時にはもう一度チェックしていただく必要があります。</p>
                            <% } %>
                        </div>
                    </div>
                    <div class="field is-grouped">
                        <div class="control">
                            <button class="button is-link" name="submit">Submit</button>
                        </div>
                        <div class="control">
                            <button class="button is-text">Cancel</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<footer class="footer">
    <div class="container">
        <div class="columns">
            <div class="column is-3 is-offset-2">
                <h2><strong>Hosting Sites by newsdict</strong></h2>
                <ul>
                    <li><a href="https://newsdict.jp/">newsdict</a></li>
                </ul>
                <ul>
                    <li><a href="https://newsdict.blog/">newsdict.blog</a></li>
                </ul>
                <ul>
                    <li><a href="https://syukei-san.xyz">集計さん</a></li>
                </ul>
            </div>
        </div>
        <div class="content has-text-centered">
            <p>
                <a class="icon" href="https://github.com/newsdict/syukei-san.xyz">
                    <i class="fa fa-github"></i>
                </a>
            </p>
            <div class="control level-item">
                <a href="https://github.com/yubele/iten.site">
                    <div class="tags has-addons">
                        <span class="tag is-dark">syukei-san.xyz</span>
                        <span class="tag is-info">MIT license</span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</footer>
</body>
</html>